{
	"name": "portal-bridge",
	"license": "OSL-3.0",
	"version": "1.0.0",
	"scripts": {
		"start": "yarn build && yarn start:raw",
		"start:raw": "node --enable-source-maps dist/index.js",
		"build": "yarn tsc",
		"format": "yarn prettier . --write",
		"lint": "yarn eslint .",
		"watch": "yarn build --watch & yarn nodemon -q -w dist -i src --exec 'node --enable-source-maps' dist/index.js",
		"version": "node -e \"console.log(require('./package.json').version)\"",
		"docker:build": "docker build -t portal-bridge:latest -t \"portal-bridge:$(yarn version)\" .",
		"docker:up": "docker compose up",
		"docker:start": "yarn docker:build && yarn docker:up"
	},
	"packageManager": "yarn@3.2.1",
	"devDependencies": {
		"@types/body-parser": "^1.19.2",
		"@types/cookie-parser": "^1.4.3",
		"@types/express": "^4.17.13",
		"@types/node": "^17.0.36",
		"@types/pg": "^8.6.5",
		"@typescript-eslint/eslint-plugin": "^5.26.0",
		"@typescript-eslint/parser": "^5.26.0",
		"discord-api-types": "^0.33.0",
		"eslint": "^8.16.0",
		"eslint-config-prettier": "^8.5.0",
		"nodemon": "^2.0.16",
		"prettier": "^2.6.2",
		"socket.io-client": "^4.5.1",
		"typescript": "^4.7.2"
	},
	"dependencies": {
		"@sapphire/result": "^1.1.1",
		"@sapphire/shapeshift": "^3.0.0",
		"body-parser": "^1.20.0",
		"cookie-parser": "^1.4.6",
		"express": "^4.18.1",
		"jose": "^4.8.1",
		"pg": "^8.7.3",
		"pg-hstore": "^2.3.4",
		"sequelize": "^6.20.1",
		"socket.io": "^4.5.1",
		"undici": "^5.3.0"
	}
}
