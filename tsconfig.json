{
	"compilerOptions": {
		"strict": true,
		"skipLibCheck": true,
		"module": "commonjs",
		"target": "es2021",
		"outDir": "dist",
		"sourceMap": false,
		"inlineSourceMap": true,
		"inlineSources": true,
		"incremental": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"lib": [
			"ESNext",
			"ESNext.Array",
			"ESNext.AsyncIterable",
			"ESNext.Intl",
			"ESNext.Symbol"
		],
		"baseUrl": "."
	},
	"include": ["src/**/*", "src/*"],
	"exclude": ["node_modules"]
}
